NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/harvestly
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/harvestly

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
